<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:aapt="http://schemas.android.com/aapt"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewConfirm"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="4dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        app:layout_constraintBottom_toBottomOf="0"
        app:layout_constraintEnd_toEndOf="0"
        app:layout_constraintStart_toStartOf="0"
        app:layout_constraintTop_toTopOf="0">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/imageViewItemConfirmService"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:layout_marginStart="16dp"
                app:layout_constraintBottom_toBottomOf="0"
                app:layout_constraintStart_toStartOf="0"
                app:layout_constraintTop_toTopOf="0" />

            <TextView
                android:textSize="24sp"
                android:textColor="@android:color/black"
                android:id="@+id/textViewItemConfirmServiceName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toStartOf="@+id/textViewItemConfirmServicePrice"
                app:layout_constraintStart_toEndOf="@+id/imageViewItemConfirmService"
                app:layout_constraintTop_toTopOf="@+id/imageViewItemConfirmService" />

            <TextView
                android:textColor="@android:color/black"
                android:id="@+id/textViewItemConfirmServiceDuration"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:layout_marginEnd="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/imageViewItemConfirmService"
                app:layout_constraintEnd_toStartOf="@+id/textViewItemConfirmServicePrice"
                app:layout_constraintStart_toStartOf="@+id/textViewItemConfirmServiceName" />

            <ImageButton
                android:id="@+id/imageButtonItemConfirmDeleteItem"
                android:background="@color/white"
                android:paddingLeft="5dp"
                android:paddingTop="20dp"
                android:paddingRight="5dp"
                android:paddingBottom="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/imageViewItemConfirmService"
                app:layout_constraintEnd_toEndOf="0"
                app:layout_constraintTop_toTopOf="@+id/imageViewItemConfirmService"
                app:srcCompat="@drawable/ic_delete_black" />

            <TextView
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:id="@+id/textViewItemConfirmServicePrice"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:text="TextView"
                android:layout_marginEnd="16dp"
                app:layout_constraintBottom_toBottomOf="@+id/imageButtonItemConfirmDeleteItem"
                app:layout_constraintEnd_toStartOf="@+id/imageButtonItemConfirmDeleteItem"
                app:layout_constraintTop_toTopOf="@+id/imageButtonItemConfirmDeleteItem" />

            <TextView
                android:textColor="@android:color/black"
                android:id="@+id/textViewItemOrderPlace"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="TextView"
                android:layout_marginStart="16dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintBottom_toTopOf="@+id/textViewItemConfirmServiceDuration"
                app:layout_constraintEnd_toStartOf="@+id/textViewItemConfirmServicePrice"
                app:layout_constraintStart_toEndOf="@+id/imageViewItemConfirmService"
                app:layout_constraintTop_toBottomOf="@+id/textViewItemConfirmServiceName" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>
